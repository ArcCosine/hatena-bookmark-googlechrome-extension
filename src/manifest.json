  "content_scripts": [
    {
      "run_at": "document_end",
      "js": [
        "content/login_check.js"
      ],
      "matches": [
        "http://www.hatena.ne.jp/login",
        "https://www.hatena.ne.jp/login",
        "http://www.hatena.ne.jp/login*",
        "https://www.hatena.ne.jp/login*"
      ]
    },
    {
      "run_at": "document_end",
      "js": [
        "content/logout.js"
      ],
      "matches": [
        "http://www.hatena.ne.jp/logout",
        "https://www.hatena.ne.jp/logout",
        "http://www.hatena.ne.jp/logout*",
        "https://www.hatena.ne.jp/logout*"
      ]
    },
    {
      "run_at": "document_end",
      "js": [
        "content/widget_embedder.js"
      ],
      "css": [
        "css/hbookmark_embedded_widgets.css"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],

