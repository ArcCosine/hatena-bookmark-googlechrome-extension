  "icons": {
      "16": "images/favicon32.png",
      "32": "images/favicon32.png",
      "48": "images/favicon32.png",
      "128": "images/favicon32.png"
  },
  "browser_action": {
    "default_icon": "images/chrome-b-plus.png",
    "default_title": "HatenaBookmark Counter"
    ,"popup": "background/popup.html"
  },
